{
  "name": "e_learning",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "dependencies": {
    "@cap-js/hana": "^2",
    "@sap/cds": "^9",
    "@sap/hana-client": "^2.27.19",
    "express": "^4",
    "hdb": "^2.26.4",
    "@sap/xssec": "^4",
    "passport": "^0"
  },
  "engines": {
    "node": "22.x"
  },
  "scripts": {
    "start": "cds-serve",
    "watch-elearningproj": "cds watch --open elaerning.elearningproj/index.html?sap-ui-xx-viewCache=false --livereload false",
    "undeploy": "cf undeploy e_learning --delete-services --delete-service-keys --delete-service-brokers",
    "build": "rimraf resources mta_archives && mbt build --mtar archive",
    "deploy": "cf deploy mta_archives/archive.mtar --retries 1"
  },
  "private": true,
  "cds": {
    "build": {
      "tasks": [
        {
          "for": "hana",
          "dest": "../db"
        },
        {
          "for": "node-cf"
        }
      ]
    },
    "requires": {
      "db": {
        "kind": "hana-cloud"
      },
      "[production]": {
        "auth": "xsuaa"
      }
    }
  },
  "workspaces": [
    "app/*"
  ],
  "devDependencies": {
    "cds-plugin-ui5": "^0.13.0",
    "@sap/cds-dk": "^9",
    "rimraf": "^5.0.5",
    "mbt": "^1.2.29"
  },
  "sapux": [
    "app/elearningproj"
  ]
}
